<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WattUp âš¡"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#434E78"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

    <!-- Input Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/input_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeWidth="1dp"
        app:strokeColor="#90CAF9"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Period &amp; Usage"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#434E78"
                android:layout_marginBottom="12dp"/>

            <!-- Month Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Month"
                android:textColor="#434E78"
                android:textSize="14sp"/>

            <!-- Month Spinner -->
            <Spinner
                android:id="@+id/spinner_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#434E78"/>

            <!-- Units Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#434E78"
                app:hintTextColor="#434E78">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Units Used (kWh)"
                    android:inputType="numberDecimal"
                    android:textColor="#434E78"
                    android:textColorHint="#434E78"/>
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Rebate Label -->
            <TextView
                android:id="@+id/textview_rebate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Rebate Percentage"
                android:textColor="#434E78"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <!-- FIXED: Clean, flat RadioGroup (no nested layouts) -->
            <RadioGroup
                android:id="@+id/radio_group_rebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="4dp">

                <RadioButton
                    android:id="@+id/radio_rebate_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:checked="true"
                    android:textColor="#434E78" />

                <RadioButton
                    android:id="@+id/radio_rebate_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1%"
                    android:textColor="#434E78" />

                <RadioButton
                    android:id="@+id/radio_rebate_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2%"
                    android:textColor="#434E78" />

                <RadioButton
                    android:id="@+id/radio_rebate_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3%"
                    android:textColor="#434E78" />

                <RadioButton
                    android:id="@+id/radio_rebate_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4%"
                    android:textColor="#434E78" />

                <RadioButton
                    android:id="@+id/radio_rebate_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%"
                    android:textColor="#434E78" />

            </RadioGroup>

            <!-- Calculate Button -->
            <Button
                android:id="@+id/button_calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate &amp; Save Bill"
                android:layout_marginTop="24dp"
                android:paddingVertical="14dp"
                android:backgroundTint="#F7E396"
                android:textColor="#434E78"
                android:textStyle="bold"
                android:letterSpacing="0.02"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Output Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/output_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeWidth="1dp"
        app:strokeColor="#90CAF9"
        app:layout_constraintTop_toBottomOf="@id/input_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculation Results"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#434E78"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textview_total_charges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Charges: RM 0.00"
                android:textSize="16sp"
                android:textColor="#434E78"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textview_final_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final Cost: RM 0.00 (0.0% rebate)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#434E78"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F7E396"
        app:itemTextColor="#434E78"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>